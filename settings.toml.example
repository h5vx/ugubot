[webui]
listen = 'localhost'
port = 8000
debug = true
# passwords_sha512 = ["", ""]
websocket_endpoint = "ws://localhost:8000/ws"

# Auth cookie will be signed with this key
# signing_key = ""

# Period after auth cookie will expire
# Format: <number>s/m/h/d/w (seconds, minutes, hours, days, weeks)
# Set to empty string to disable expiration
auth_expiration = "1w"

[database]
provider = "sqlite"
filename = "./history.db"
create_db = True

# [database]
# provider = "postgres"
# user = ""
# password = ""
# host = "localhost"
# port = 5432
# database = "ugubot"

[redis]
# Redis is optional. It is used for caching to improve performance
enabled = true
host = "localhost"
port = 6379
db = 0

[logging]
version = 1

[logging.formatters.default]
format = "%(asctime)s %(levelname)-8s %(name)-15s %(message)s"

[logging.handlers.default]
class = "logging.StreamHandler"
formatter = "default"
level = "INFO"
stream = "ext://sys.stdout"

[logging.handlers.debugging]
class = "logging.StreamHandler"
formatter = "default"
level = "DEBUG"
stream = "ext://sys.stdout"

[logging.loggers.'']
handlers = ["default"]
level = "INFO"
propagate = false

[logging.loggers.aioxmpp]
handlers = ["debugging"]
level = "DEBUG"
propagate = false